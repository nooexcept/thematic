{

  "manifest_version": 2,
  "name": "Thematic",
  "version": "1.2",

  "description": "__MSG_extensionDescription__",

  "default_locale": "en",

  "icons": {
    "48": "assets/logo.svg",
    "96": "assets/logo.svg"
  },

  "permissions": [
    "<all_urls>",
    "webNavigation",
    "activeTab",
    "tabs",
    "contextMenus",
    "storage"
  ],

  "background": {
    "scripts": [ "src/util.js", "vendor/tinycolor.js", "src/background_scripts/transform.js", "src/background_scripts/thematic.js" ]
  },

  "browser_action": {
    "default_icon": "./assets/logo.svg",
    "default_title": "Thematic",
    "default_popup": "./pages/popup.html"
  }

}